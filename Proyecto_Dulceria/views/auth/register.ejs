<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h2>Register</h2>
    <% if (messages.length) { %>
        <ul>
            <% messages.forEach(message => { %>
                <li><%= message %></li>
            <% }) %>
        </ul>
    <% } %>
    <form action="/register" method="POST">
        <label for="nombre_usuario">Nombre:</label>
        <input type="text" id="nombre_usuario" name="nombre_usuario" required>
        <label for="email_usuario">Email:</label>
        <input type="email" id="email_usuario" name="email_usuario" required>
        <label for="contrasena_usuario">Contraseña:</label>
        <input type="password" id="contrasena_usuario" name="contrasena_usuario" required>
        <label for="apellido_paterno_usuario">Apellido Paterno:</label>
        <input type="text" id="apellido_paterno_usuario" name="apellido_paterno_usuario" required>
        <label for="apellido_materno_usuario">Apellido Materno:</label>
        <input type="text" id="apellido_materno_usuario" name="apellido_materno_usuario" required>
        <label for="id_rol">Rol:</label>
        <input type="number" id="id_rol" name="id_rol" required>
        <label for="id_genero">Género:</label>
        <input type="number" id="id_genero" name="id_genero" required>
        <button type="submit">Register</button>
    </form>
    <a href="/login">Login</a>
</body>
</html>
