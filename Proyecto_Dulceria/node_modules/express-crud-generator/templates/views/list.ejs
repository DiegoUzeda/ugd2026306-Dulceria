<div class="row">
  <div class="col-sm-12">
      <a class="btn btn-success" href="<%= Model.url %>/create">Nuevo</a>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-hover table-condensed table-responsive">
      <thead>
        <tr>
        <% Object.keys(Model.schema).forEach(function(property){ %>
          <th class="text-capitalize"><%= property %></th>
        <% }) %>
        </tr>
      </thead>
      <tbody>
        <%% for ( var i = 0; i < items.length ; i++ ){ %%>
          <tr>

            <% Object.keys(Model.schema).forEach(function(property){ %>
              <td> <%%= items[i]['<%- property %>'] %%> </td>
            <% }) %>
            <td>
              <a href="<%= Model.url %>/<%%= items[i].<%= Model.pk %> %%>/edit" class="btn btn-default">Editar</a>
              &nbsp;
              <a href="<%= Model.url %>/<%%= items[i].<%= Model.pk %> %%>/delete" class="btn btn-danger">Borrar</a>
            </td>
          </tr>
        <%% } %%>

      </tbody>
    </table>
  </div>
</div>
